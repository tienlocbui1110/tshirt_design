<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">



    <title>Quản lý áo thun</title>
    <!-- Icons-->
    <link href="/vendors/@coreui/icons/css/coreui-icons.min.css" rel="stylesheet">
    <link href="/vendors/flag-icon-css/css/flag-icon.min.css" rel="stylesheet">
    <link href="/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="/vendors/simple-line-icons/css/simple-line-icons.css" rel="stylesheet">
    <!-- Main styles for this application-->
    <link href="/css/coreui.min.css" rel="stylesheet">
    <link href="/vendors/pace-progress/css/pace.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin.css">
</head>

<body class="app header-fixed sidebar-fixed aside-menu-fixed sidebar-lg-show">
    <header class="app-header navbar">
        <button class="navbar-toggler sidebar-toggler d-lg-none mr-auto" type="button" data-toggle="sidebar-show">
            <span class="navbar-toggler-icon"></span>
        </button>
        <button class="navbar-toggler sidebar-toggler d-md-down-none" type="button" data-toggle="sidebar-lg-show">
            <span class="navbar-toggler-icon"></span>
        </button>
        <ul class="nav navbar-nav ml-auto">


            <li class="nav-item dropdown">
                <a class="nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                    <img class="img-avatar" src="/img/avatar1.jpg" alt="admin@bootstrapmaster.com">
                </a>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" href="profile.html">
                        <i class="fa fa-user"></i> Profile</a>
                    <a class="dropdown-item" href="/logout">
                        <i class="fa fa-lock"></i> Logout</a>
                </div>
            </li>
        </ul>
    </header>
    <div class="app-body">
        <div class="sidebar">
            <nav class="sidebar-nav">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin">
                            <i class="nav-icon icon-speedometer"></i> Trang chủ
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/order">
                            <i class="nav-icon icon-speedometer"></i> Quản lý đơn hàng
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/tshirt">
                            <i class="nav-icon icon-speedometer"></i> Quản lý áo thun
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/history">
                            <i class="nav-icon icon-speedometer"></i> Lịch sử giao dịch
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/coupon">
                            <i class="nav-icon icon-speedometer"></i> Coupon
                        </a>
                    </li>
                </ul>
            </nav>
            <button class="sidebar-minimizer brand-minimizer" type="button"></button>
        </div>
        <main class="main">
            <!-- Breadcrumb-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/admin">Admin</a>
                </li>
                <li class="breadcrumb-item active">Quản lý áo thun</li>

            </ol>
            <div class="container-fluid">
                <div class="animated fadeIn">
                    <div class="card main-statistical">
                        <div class="card-body">
                            <button class="btn btn-primary" onclick="window.location.href='/admin/edittshirt';" style="float: right; ">Thêm áo mới</button>
                            <div class="list-order">
                                {{#each payload.shirts}}
                                <h4>{{this.name}}</h4>
                                <div class="order-item">
                                    <div class="left-img">
                                        <img src="{{this.imgPath}}">
                                    </div>
                                    <div class="detail-info">
                                        <div class="button-container" style="display: flex; flex-direction:row;">
                                            <form class="form-inline" style="display: flex; flex:1;"><button class="btn btn-primary" onclick="window.location.href='/admin/editshirt';">Sửa</button></form>
                                            <form class="form-inline" method="POST" action="/admin/shirt/{{this.id}}?_method=DELETE" style="display: flex; flex:1;"><button class="btn btn-danger">Xóa</button></form>
                                            
                                        </div>
                                        <p>Giá tiền:
                                            <span>{{this.cost}}đ</span>
                                        </p>
                                        <p>Kích cỡ:
                                            <span>ALL</span>
                                        </p>
                                        <p>Số lượng:
                                            <span>{{this.soluongmua}}</span>
                                        </p>
                                    </div>
                                </div>
                                {{/each}}
                                {{{paginate pagination leftText="&lt" rightText="&gt"}}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <!-- Bootstrap and necessary plugins-->
    <script src="/vendors/jquery/js/jquery.min.js"></script>
    <script src="/vendors/popper.js/js/popper.min.js"></script>
    <script src="/vendors/bootstrap/js/bootstrap.min.js"></script>
    <script src="/vendors/pace-progress/js/pace.min.js"></script>
    <script src="/vendors/perfect-scrollbar/js/perfect-scrollbar.min.js"></script>
    <script src="/vendors/@coreui/coreui/js/coreui.min.js"></script>
    <!-- Plugins and scripts required by this view-->
    <script src="/vendors/chart.js/js/Chart.min.js"></script>
    <script src="/vendors/@coreui/coreui-plugin-chartjs-custom-tooltips/js/custom-tooltips.min.js"></script>
    <script src="/js/admin.js"></script>
</body>

</html>