        <nav class="navbar navbar-expand-lg navbar-dark">
            <a class="navbar-brand" href="/">My Design Clothes</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <form action="searching.html" class="form-inline my-2 my-lg-0" style="height: 100%;">
                            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-info my-2 my-sm-0" type="submit">
                                <i class="fas fa-search fa-lg"></i>
                            </button>
                        </form>
                    </li>
                    <li class="nav-item active icon-items">
                        <a href="/cart">
                            <img id="gioHang" src="/img/shopping_cart.png" alt=""> Giỏ hàng
                        </a>
                    </li>
                    <li class="nav-item icon-items">
                        <a href="/login">
                            <img id="DangNhap" src="/img/icon-login.png" alt=""> Đăng nhập
                        </a>
                    </li>

                </ul>
            </div>
        </nav>
        <p class="line"></p>
        <div class="container">

            <div class="nav_bottom">
                <ul>
                    <li id="li_tc">
                        <a href="/">Trang Chủ</a>
                    </li>
                    <li>
                        <a href="/lamAo">Làm Áo</a>
                    </li>
