<link rel="stylesheet" href="/css/style_danhMuc.css">
</head>

<body>
    <!-- Navbar -->
    <div class="navbar-master">
        {{#if payload.authenticated}} {{>loggedInNavBarInformation}} {{else}} {{>notLoggedInNavBarInformation}} {{/if}}
        <p class="line"></p>
        <div class="container">
            <div class="nav_bottom">
                <ul>
                    <li id="li_tc">
                        <a href="/">Trang Chủ</a>
                    </li>
                    <li>
                        <a href="/lamAo">Làm Áo</a>
                    </li>
                    <li>
                        <a href="/khuyenMai">Khuyến Mãi</a>
                    </li>
                    <li>
                        <a href="/aoHot">Áo Hot</a>
                    </li>
                    <li id="li_au">
                        <div>
                            <a href="/danhMuc" id="none-hover">Danh mục</a>
                            <div class="list-shirt">
                                <a href="/danhMuc/aothun">Áo thun</a>
                                <a href="/danhMuc/aocotim">Áo cổ tim</a>
                                <a href="/danhMuc/aohoddie">Áo hoddie</a>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="left-list">
            <div>
                {{#if isAoThun}}
                <a href="/danhMuc/aothun" class="nav-left-list-active">Áo thun</a>
                {{else}}
                <a href="/danhMuc/aothun">Áo thun</a>
                {{/if}}
            </div>
            <div>
                {{#if isAoCoTim}}
                <a href="/danhMuc/aocotim" class="nav-left-list-active">Áo cổ tim</a>
                {{else}}
                <a href="/danhMuc/aocotim">Áo cổ tim</a>
                {{/if}}
            </div>
            <div>
                {{#if isHoddie}}
                <a href="/danhMuc/aohoddie" class="nav-left-list-active">Áo Hoddie</a>
                {{else}}
                <a href="/danhMuc/aohoddie">Áo Hoddie</a>
                {{/if}}
            </div>
        </div>
        <div class="gallery">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/">Trang chủ</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Áo thun</li>
                </ol>
            </nav>
            <div class="row">
                {{#each payload.shirts}}
                <div class="col-xl-3 col-lg-4 col-sm-6">
                    <div class="item">
                        <img src="{{{this.imgPath}}}" alt="">
                        <p class="info">{{{this.name}}}</p>
                        <hr>
                        <a class="cost" id="{{{this.id}}}" data-toggle="modal" data-target="#myModal">{{{this.cost}}}đ</a>
                    </div>
                </div>
                {{/each}}
            </div>
            {{{paginate pagination leftText="&lt" rightText="&gt"}}}
        </div>
    </div>