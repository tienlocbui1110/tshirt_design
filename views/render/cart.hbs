<link rel="stylesheet" href="/css/style_cart.css">
</head>

<body>
    <!-- Navbar -->
    <div class="navbar-master">
        {{#if payload.authenticated}} {{>loggedInNavBarInformation}} {{else}} {{>notLoggedInNavBarInformation}} {{/if}}
        <p class="line"></p>
        <div class="container">
            <div class="nav_bottom">
                <ul>
                    <li id="li_tc">
                        <a href="/">Trang Chủ</a>
                    </li>
                    <li>
                        <a href="/lamAo">Làm Áo</a>
                    </li>
                    <li>
                        <a href="/khuyenMai">Khuyến Mãi</a>
                    </li>
                    <li>
                        <a href="/aoHot">Áo Hot</a>
                    </li>
                    <li id="li_au">
                        <div>
                            <a href="/danhMuc" id="none-hover">Danh mục</a>
                            <div class="list-shirt">
                                <a href="/danhMuc/aothun">Áo thun</a>
                                <a href="/danhMuc/aocotim">Áo cổ tim</a>
                                <a href="/danhMuc/aohoddie">Áo hoddie</a>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="content">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/">Trang chủ</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Giỏ hàng</li>
                </ol>
            </nav>
            <h2 id="name" style="text-align: left;margin-top:25px; margin-bottom:55px;">Giỏ hàng</h2>
            <div class="shopping-cart-list">
                {{#each payload.shirtsCart}}
                <div class="shopping-cart-item">
                    <div class="shopping-cart-item-img">
                        <img src="{{this.imgPath}}" alt="">
                    </div>
                    <div class="shopping-cart-item-information">
                        <a href="/">{{this.name}}</a>
                        <p>Giá tiền:
                            <span>{{this.cost}}đ</span>
                        </p>
                        <button class="btn btn-danger">XÓA</button>
                    </div>
                    <div class="shopping-cart-item-amount">
                        <button class="shopping-cart-item-minus">
                            <img src="/img/minus.png" alt="" style="color:transparent">
                        </button>
                        <div style="height: 32px;">{{this.count}}</div>
                        <button class="shopping-cart-item-plus">
                            <img src="/img/add.png" alt="">
                        </button>
                    </div>
                </div>
                <hr>
                {{/each}}
                {{#if payload.cart.haveItem}}
                <div class="shopping-cart-item">
                    <div class="shopping-cart-item-img">
                        <img src="{{payload.lastShirts.imgPath}}" alt="">
                    </div>
                    <div class="shopping-cart-item-information">
                        <a href="/">{{name}}</a>
                        <p>Giá tiền:
                            <span>{{payload.lastShirts.cost}}đ</span>
                        </p>
                        <button class="btn btn-danger">XÓA</button>
                    </div>
                    <div class="shopping-cart-item-amount">
                        <button class="shopping-cart-item-minus">
                            <img src="/img/minus.png" alt="" style="color:transparent">
                        </button>
                        <div style="height: 32px;">{{payload.lastShirts.count}}</div>
                        <button class="shopping-cart-item-plus">
                            <img src="/img/add.png" alt="">
                        </button>
                    </div>
                </div>
                {{/if}}
            </div>
            {{#if payload.cart.haveItem}}
            <button class="btn btn-primary" onclick="location.href='/login';">Thanh toán</button>
            {{else}}
            <button class="btn btn-primary" onclick="location.href='/login';" disabled>Thanh toán</button>
            {{/if}}
        </div>

    </div>