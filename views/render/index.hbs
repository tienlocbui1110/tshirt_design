<link rel="stylesheet" href="/css/style_home.css">
</head>

<body>
    <!-- Navbar -->
    <div class="navbar-master">
        {{#if payload.authenticated}} {{>loggedInNavBarInformation}} {{else}} {{>notLoggedInNavBarInformation}} {{/if}}
        <p class="line"></p>
        <div class="container">

            <div class="nav_bottom">
                <ul>
                    <li id="li_tc">
                        <a href="/">Trang Chủ</a>
                    </li>
                    <li>
                        <a href="/lamAo">Làm Áo</a>
                    </li>
                    <li>
                        <a href="/khuyenMai">Khuyến Mãi</a>
                    </li>
                    <li>
                        <a href="/aoHot">Áo Hot</a>
                    </li>
                    <li id="li_au">
                        <div>
                            <a href="/danhMuc" id="none-hover">Danh mục</a>
                            <div class="list-shirt">
                                <a href="/danhMuc/aothun">Áo thun</a>
                                <a href="/danhMuc/aocotim">Áo cổ tim</a>
                                <a href="/danhMuc/aohoddie">Áo hoddie</a>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div id="banner">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                    <img class="d-block img-fluid" src="/img/banner1.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block img-fluid" src="/img/banner2.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block img-fluid" src="/img/banner3.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <p class="h1" style="text-align: center;">
        Web bán hàng uy tín
    </p>
    <div class="container">
        <div class="gallery">
            <div class="header_gallery">
                <a id="nameGallery">ÁO HOT</a>
                <a id="more" href="/aoHot">Xem thêm...</a>
            </div>
            <div class="row">
                {{#each payload.hotshirts}}
                <div class="col-xl-3 col-lg-4 col-sm-6">
                    <div class="item">
                        <img src="{{{this.imgPath}}}" alt="">
                        <p class="info">{{{this.name}}}</p>
                        <hr>
                        <a class="cost" id="{{{this.id}}}">{{{this.cost}}}đ</a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

        <div class="gallery" id="khuyenmai">
            <div class="header_gallery">
                <a id="nameGallery"></a>KHUYẾN MÃI</a>
                <a id="more" href="/khuyenMai">Xem thêm...</a>
            </div>
            <div class="row">
                {{#each payload.kmshirts}}
                <div class="col-xl-3 col-lg-4 col-sm-6">
                    <div class="item">
                        <img src="{{{this.imgPath}}}" alt="">
                        <p class="info">{{{this.name}}}</p>
                        <hr>
                        <a class="cost" id="{{{this.id}}}">{{{this.costKhuyenMai}}}đ</a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

        <div class="HuongDan">
            <div class="row">
                <div class="col-sm-4">
                    <h1>Hướng dẫn làm áo</h1>
                    <hr>
                    <ul>
                        <li>Bước 1: Chọn kiểu áo</li>
                        <li>Bước 2: Chọn vị trí đặt ảnh</li>
                        <li>Bước 4: Chọn ảnh và tùy chỉnh</li>
                        <li>Bước 4: Thanh toán</li>
                    </ul>
                    <button type="button" class="btn btn-outline-primary" style="float: right" onclick="location.href='/lamAo';">Bắt đầu làm</button>
                </div>
                <div class="col-sm-8">
                    <iframe id="videoTur" src="https://www.youtube.com/embed/tgbNymZ7vqY?controls=1"></iframe>
                </div>
            </div>
        </div>
    </div>