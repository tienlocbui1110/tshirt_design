<link rel="stylesheet" href="/css/style_aoHot.css">
</head>

<body>
    <!-- Navbar -->
    <div class="navbar-master">
        {{#if payload.authenticated}} {{>loggedInNavBarInformation}} {{else}} {{>notLoggedInNavBarInformation}} {{/if}}
        <p class="line"></p>
        <div class="container">

            <div class="nav_bottom">
                <ul>
                    <li id="li_tc">
                        <a href="/">Trang Chủ</a>
                    </li>
                    <li>
                        <a href="/lamAo">Làm Áo</a>
                    </li>
                    <li>
                        <a href="/khuyenMai">Khuyến Mãi</a>
                    </li>
                    <li>
                        <a href="/aoHot">Áo Hot</a>
                    </li>
                    <li id="li_au">
                        <div>
                            <a href="#" id="none-hover">Danh mục</a>
                            <div class="list-shirt">
                                <a href="/danhMuc">Áo thun</a>
                                <a href="/danhMuc">Áo khoác</a>
                                <a href="/danhMuc">Áo choàng</a>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="aoHot">
            <h2>Khuyến mãi</h2>
            <p>Những mẫu áo thịnh hành đang khuyễn mãi</p>
            <div class="gallery">
                <div class="row">
                    {{#each payload.shirts}}
                    <div class="col-xl-3 col-lg-4 col-sm-6">
                        <div class="item">
                            <img src="{{{this.imgPath}}}" alt="">
                            <p class="info">{{{this.name}}}</p>
                            <hr>
                            <a class="cost" id="{{{this.id}}}">{{{this.cost}}}đ</a>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>

            <div class="pagination">
                <a href="#">&laquo;</a>
                <a class="active" href="#">1</a>
                <a href="/aoHot">2</a>
                <a href="/aoHot">3</a>
                <a href="/aoHot">4</a>
                <a href="/aoHot">5</a>
                <a href="/aoHot">6</a>
                <a id="last" href="/aoHot">&raquo;</a>
            </div>
        </div>
    </div>